<Page
    x:Class="InvalidPlayer.View.Player"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <MediaElement x:Name="MainPlayer" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"
                      VerticalAlignment="Center" AreTransportControlsEnabled="True" AutoPlay="True" IsLooping="True"
                      BufferingProgressChanged="player_BufferingProgressChanged"
                      DownloadProgressChanged="player_DownloadProgressChanged" />
        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4" Fill="DeepPink" />
        <TextBlock Margin="3,0" Text="0%" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center"
                   x:Name="BufferingProgressTextBlock" FontSize="15" />
        <Button Margin="3,0" MinHeight="55" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Play"
                Click="YoukuBtn_OnClick" Style="{StaticResource NoBorderButtonStyle}" />
        <TextBox Margin="3,0" Text="http://v.youku.com/v_show/id_XNDUwNjU1OTA4.html" HorizontalAlignment="Stretch"
                 Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="WebUrlTextBox" VerticalAlignment="Center"
                 TextWrapping="NoWrap"
                 InputScope="Url" />

    </Grid>
</Page>